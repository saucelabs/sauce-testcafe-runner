{
  "apiVersion": "v1alpha",
  "kind": "testcafe",
  "sauce": {
    "concurrency": 1,
    "metadata": {
      "build": "Release $CI_COMMIT_SHORT_SHA",
      "name": "Testing Testcafe Support",
      "tags": [
        "e2e",
        "release team",
        "other tag"
      ]
    },
    "region": "us-west-1"
  },
  "suites": [
    {
      "browserName": "chrome",
      "name": "saucy test",
      "headless": true,
      "browserArgs": [
        "--disable-safe-browsing",
        "--disable-web-security",
        "--disable-notifications"
      ],
      "speed": 1,
      "armRequired": "true",
      "src": [
        "**/*.test.js"
      ]
    }
  ],
  "testcafe": {
    "projectPath": "tests/",
    "version": "1.10.1"
  }
}
