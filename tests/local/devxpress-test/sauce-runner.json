{
  "apiVersion": "v1alpha",
  "kind": "testcafe",
  "sauce": {
    "concurrency": 1,
    "metadata": {
      "build": "Release $CI_COMMIT_SHORT_SHA",
      "name": "Testing Testcafe Support",
      "tags": [
        "e2e",
        "release team",
        "other tag"
      ]
    },
    "region": "us-west-1"
  },
  "suites": [
    {
      "browserName": "chrome:headless --disable-safe-browsing --disable-web-security --disable-notifications",
      "name": "saucy test",
      "headless": true,
      "speed": 1,
      "armRequired": "true",
      "src": [
        "**/*.test.js"
      ]
    }
  ],
  "testcafe": {
    "projectPath": "tests/",
    "version": "1.10.1"
  }
}
