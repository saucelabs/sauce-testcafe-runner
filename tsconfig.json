{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  }
}
